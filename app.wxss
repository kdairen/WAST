/**app.wxss**/

.page {
  /*min-height: 100%;*/
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  overflow: hidden;
}

.page_scroll_item {
  margin-left: 50rpx;
  height: 120rpx;
  display: flex;
  border: 2rpx solid;
  border-color: #fff;
  border-bottom-color: #ddd;
}

.page_title {
  text-align: left;
  margin-top: 10rpx;
  line-height: 48rpx;
  font-size: 38rpx;
}

/**选择题选项**/

.btn_op {
  min-height: 96rpx;
  text-align: left;
  margin-bottom: 20rpx;
  line-height: 48rpx;
  font-size: 38rpx;
}

.page_bottom {
  position:fixed;
  width: 100%;
  height: 50px;
  bottom: 0px;
  background-color: #000;
  display: flex;
  color: #fff;
  text-align: center;
  font-size: 20px;
}

.page_bottom_left {
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: 58px;
  height: 48px;
  line-height: 49px;
  border: 1px solid;
  border-color: #000;
  border-right-color: #888;
}

.page_bottom_msg {
  position: fixed;
  left: 70px;
  bottom: 0px;
  width: 120px;
  height: 25px;
  line-height: 24px;
  font-size: 19px;
  text-align:left;
}

.page_bottom_star {
  position: fixed;
  right: 125px;
  bottom: 0px;
  width: 25px;
  height: 25px;
  font-size: 19px;
  line-height: 24px;
}

.page_bottom_last {
  position: fixed;
  right: 60px;
  bottom: 0px;
  width: 58px;
  height: 48px;
  line-height: 49px;
  border: 1px solid;
  border-color: #000;
  border-left-color: #888;
}

.page_bottom_next {
  position: fixed;
  right: 0px;
  bottom: 0px;
  width: 58px;
  height: 48px;
  line-height: 49px;
  border: 1px solid;
  border-color: #000;
  border-left-color: #888;
}
